<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TripOptionsActivity">

    <com.github.nikartm.button.FitButton
        android:id="@+id/createTrip"
        android:layout_width="229dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="155dp"
        android:gravity="center"
        app:fb_backgroundColor="#A20DB8"
        app:fb_shape="rectangle"
        app:fb_text="Create Trip"
        app:fb_textAllCaps="true"
        app:fb_textColor="#FFF"
        app:fb_textPaddingEnd="16dp"
        app:fb_textPaddingStart="16dp"
        app:fb_textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.nikartm.button.FitButton
        android:id="@+id/friendsTrip"
        android:layout_width="229dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="155dp"
        android:gravity="center"
        app:fb_backgroundColor="#13B41D"
        app:fb_shape="rectangle"
        app:fb_text="Friends' Trip"
        app:fb_textAllCaps="true"
        app:fb_textColor="#FFF"
        app:fb_textPaddingEnd="16dp"
        app:fb_textPaddingStart="16dp"
        app:fb_textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>