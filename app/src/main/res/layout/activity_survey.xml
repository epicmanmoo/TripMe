<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SurveyActivity">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="222dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="152dp"
        android:textStyle="bold"
        android:text="What is your budget?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="What is your budget?" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="222dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="152dp"
        android:textStyle="bold"
        android:text="What is your preferred diet?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="222dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:textStyle="bold"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="152dp"
        android:text="How long do you want to stay?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/days"
        android:layout_width="49dp"
        android:layout_height="39dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:inputType="number"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/hours"
        android:layout_width="49dp"
        android:layout_height="39dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:inputType="number"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginTop="152dp"
        android:text="Day(s)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="79dp"
        android:text="Hours"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/hours"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="233dp"
        android:text="$"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/budget"
        android:layout_width="199dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/diet"
        android:layout_width="220dp"
        android:layout_height="43dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="476dp"
        android:layout_marginEnd="70dp"
        android:drawSelectorOnTop="true"
        android:entries="@array/diet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.nikartm.button.FitButton
        android:id="@+id/continueSurvey"
        android:layout_width="222dp"
        android:layout_height="59dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="524dp"
        android:layout_marginEnd="70dp"
        android:gravity="center"
        app:fb_backgroundColor="#FFC107"
        app:fb_shape="rectangle"
        app:fb_text="Continue"
        app:fb_textAllCaps="true"
        app:fb_textColor="#FFF"
        app:fb_textPaddingEnd="16dp"
        app:fb_textPaddingStart="16dp"
        app:fb_textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>